extends layout

block nav-items
  +nav_item('/#','active') Home
  +nav_item('/about') About
  +nav_item('/login') Login
  +nav_item('/signup') Sign Up

block append content
  #carousel-cta_carousel.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li(data-target='#carousel-cta_carousel', data-slide-to='0')
      li(data-target='#carousel-cta_carousel', data-slide-to='1')
      li.active(data-target='#carousel-cta_carousel', data-slide-to='2')
      li(data-target='#carousel-cta_carousel', data-slide-to='3')
    .carousel-inner(role='listbox')
      .item.active
        img(src='https://www.njit.edu/homeimages/footer-bgs/home-10.jpg')
        .carousel-caption
          h1 Welcome!
          p
            a.btn.btn-lg.btn-primary(href='/signup', role='button') Sign up today

    a.left.carousel-control(href='#carousel-cta_carousel', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#carousel-cta_carousel', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next

